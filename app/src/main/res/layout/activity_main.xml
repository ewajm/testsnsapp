<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.manekej.testsnsapp.MainActivity">

    <Button
        android:text="sendNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendButton"
        android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <Button
        android:text="Log Token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logTokenButton"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/createEndpointButton" android:layout_centerHorizontal="true"/>
    <Button
        android:text="Create Endpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createEndpointButton"
        android:layout_alignBottom="@+id/sendButton" android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"/>
    <Button
        android:text="Remove Endpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp" android:id="@+id/removeEndpointButton"
        android:layout_below="@+id/sendButton" android:layout_alignRight="@+id/createEndpointButton"
        android:layout_alignEnd="@+id/createEndpointButton"/>
</RelativeLayout>
